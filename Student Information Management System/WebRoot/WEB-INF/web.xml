<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.shy.server.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>

  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>LoginRespond</servlet-name>
    <servlet-class>com.shy.server.LoginRespond</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>SelectRespond</servlet-name>
    <servlet-class>com.shy.server.SelectRespond</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>InsertRespond</servlet-name>
    <servlet-class>com.shy.server.InsertRespond</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ModifyRespond</servlet-name>
    <servlet-class>com.shy.server.ModifyRespond</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>DeleteRespond</servlet-name>
    <servlet-class>com.shy.server.DeleteRespond</servlet-class>
  </servlet>





  <servlet-mapping>
    <servlet-name>LoginRespond</servlet-name>
    <url-pattern>/servlet/LoginRespond</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SelectRespond</servlet-name>
    <url-pattern>/servlet/SelectRespond</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>InsertRespond</servlet-name>
    <url-pattern>/servlet/InsertRespond</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ModifyRespond</servlet-name>
    <url-pattern>/servlet/ModifyRespond</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteRespond</servlet-name>
    <url-pattern>/servlet/DeleteRespond</url-pattern>
  </servlet-mapping>

</web-app>